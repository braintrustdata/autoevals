  "compilerOptions": {
	"incremental": true,
    "declaration": true,
    "outDir": "./jsdist",
    "lib": ["es6"],
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["js"],
  "exclude": ["node_modules/**"]
}
